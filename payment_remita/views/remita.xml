<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <template id="remita_acquirer_button">
            <form t-if="acquirer.apikey" t-att-action="tx_url" method="post" target="_self">
                <input type="hidden" name="merchantId" t-att-value="tx_values['aaaaaamerchantId']"/>
                <input type="hidden" name="serviceTypeId" t-att-value="tx_values['aaaaaserviceTypeId']"/>
                <input type="hidden" name="amt" t-att-value="tx_values['aaamountt'] or '0.0'"/>
                <input t-if="tx_values.get('aaresponseurl')" type='hidden' name='responseurl'
                    t-att-value="tx_values.get('aaresponseurl')"/>
                <input type="hidden" name="hash" t-att-value="tx_values['SHASIGN']"/>
                <input type="hidden" name="payerName" t-att-value="partner_values['first_name']"/>
                <input type="hidden" name="paymenttype" t-att-value='VERVE'/>
                <input type="hidden" name="payerEmail" t-att-value="partner_values['email']"/>
                <input type="hidden" name="orderId" t-att-value="tx_values['aaaatxn_ref']"/>
              
                <!-- submit -->
                <button type="submit" width="100px"
                    t-att-class="submit_class">
                    <img t-if="not submit_txt" src="/payment_webpay/static/src/img/remita-payment-logo-vertical.png"/>
                    <span t-if="submit_txt"><t t-esc="submit_txt"/> <span class="fa fa-long-arrow-right"/></span>
                </button>
            </form>
        </template>

    </data>
</odoo>
