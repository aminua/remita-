<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="payment_voucher_template">
			<div class="page">
				<style>
					table th, td{
						text-align: center;
					    border: 2px solid black !important;
					    border-collapse: collapse;
					}
					th[scope=col] {
					    -webkit-transform: rotate(-90deg);
					    padding-top:100px;
					    text-align:left;
					}
				</style>

				<!-- Header Section -->
				<h4 class="text-center text-uppercase"><u>Payment Voucher</u></h4>

				<!-- Deptal section -->
				<div class="container">
					<div class="row">
						<div class="col-xs-4">Deptal No. __________</div>
						<div class="col-xs-8">Checked and passed for payment at _________</div>
					</div>
				</div>

				<div class="container">
					<div class="row">
						<table class="table table-bordered">
							<tbody>
								<tr>
									<th class="col-xs-1" scope="col">
										For use in payment of Advances
									</th>
								</tr>
							</tbody>
						</table>
					</div>
				</div>

				<!-- Payee's Details Row -->
				<div class="container">
					<div class="row">
						<div class="col-xs-2">Payee</div>
						<div class="col-xs-8"><u>Name of the payee</u></div>
					</div>
					<br/>
					<div class="row" style="padding-left: 0">
						<div class="col-xs-2">Address</div>
						<div class="col-xs-8"><u>Address of the payee</u></div>
					</div>
				</div>
				<!-- Table Section -->
				<div class="container description">
					<!-- first row -->
					<div class="row">
						<div class="col-xs-1">Date</div>
						<div class="col-xs-8" >Detailed Description of Service / Work</div>
						<div class="col-xs-1">Rate</div>
						<div class="col-xs-1">=N=</div>
						<div class="col-xs-1">K</div>
					</div>
					<!--Second row-->
					<div class="row" style="height:300px;">
						<div class="col-xs-1">The date</div>
						<div class="col-xs-8">description</div>
						<div class="col-xs-1">rate</div>
						<div class="col-xs-1">naira</div>
						<div class="col-xs-1">kobo</div>
					</div>
					<!-- Third Table row -->
					<div class="row">
						<div class="col-xs-1">.</div>
						<div class="col-xs-8">Checked and insert amount in words<br/>Passed for</div>
						<div class="col-xs-1">Total =N=</div>
						<div class="col-xs-1">.</div>
						<div class="col-xs-1">.</div>
					</div>
				</div>
				<!-- Certificate Section -->
				<div class="container" style="margin-top: 0; padding-top: 0">
					<div class="row">
						<div class="col-xs-6" style="border: 2px solid black;">
							<div>Payable at __________________________</div><br/>
							<div>Signature ___________________________</div><br/>
							<div>Name in Block Letters _______________</div><br/>
							<div>Station ____________ Date _____________</div><br/>
							<div>Paying Officers_______________________</div><br/>
							<div>Signature______________________________</div><br/>
							<div>Autly, AIE No. etc.____________________</div><br/>
						</div>
						<div class="col-xs-6">
							<h5 style="text-transform: uppercase; text-align: center;">certificate</h5>
							<p>
								I certify the amount above is correct and incurred under the authority quoted; that the service have been daily performed;
								that the rate / price charged is according to regulations / contracts is fair and reasonable.
							</p>
							<p>
								That the amount of ............................  Naira ................................. Kobo may be paid under the Classification quoted.
							</p>
							<ul style="list-style-type: none; padding-left: 0">
								<li>Signature: ..............................................</li>
								<li>Place: ..................................................</li>
								<li>Date: ...................................................</li>
								<li>Designation: ............................................</li>
							</ul>
						</div>
					</div>
				</div>
				<!-- Payment text -->
				<div class="container">
					<div class="row">
						Received from the Federal Government of nigeria the sum of _______________ Naira ____________
						Kobo in full settlement of the account.
					</div>
					<div class="row">
						<div class="text-right">_________________</div>
						<div class="text-right" style="margin-right: 3px;">Signature</div>
					</div>
					<div class="row">
						<div class="col-xs-4">=N=_______________K</div>
						<div class="col-xs-4">Date _____________</div>
						<div class="col-xs-4">Place ____________</div>
					</div>
				</div>
			</div>
		</template>

		<template id="voucher_report_account">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="report.external_layout">
						<t t-call="payment_voucher.payment_voucher_template"/>
					</t>
				</t>
			</t>
		</template>

		<report id="report_voucher_supplier"
				string="Payment Voucher"
				model="account.payment"
				report_type="qweb-pdf"
				name="payment_voucher.voucher_report_account"
				/>
	</data>
</odoo>
