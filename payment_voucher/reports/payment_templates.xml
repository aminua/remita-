<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="payment_voucher_template">
			<div class="page">
				<style>
					table th, td{
						text-align: center;
					    border: 2px solid black !important;
					    border-collapse: collapse;
					}
<!--					th[scope=col] {-->
<!--					    -webkit-transform: rotate(-90deg);-->
<!--					    padding-top:100px;-->
<!--					    text-align:left;-->
<!--					}-->
				</style>

				<div class="row mt16 mb16" style="text-align:center; text-transform: uppercase;">
					<h4><strong><u>Payment Voucher</u></strong></h4>
				</div>

				<!-- Deptal section -->
				<div class="row">
					<div class="col-xs-4">Deptal No. __________</div>
					<div class="col-xs-8">Checked and passed for payment at _________</div>
				</div>
				<br/>

				<div class="row">
					<div class="col-xs-4" style="border: 1px solid #eeee">
						<span>For use in payment of Advances</span>
						<span>Certified the Advance of </span>
						<span>N _______________________</span>
						<span>has been entered on TF 174 (A) (B) (C)</span>
						<span>Deptal No. _______________</span>
						<span>Signature</span>
						<span>Name in block letters</span>
					</div>
					<div class="col-xs-6" style="background-color: #568eff; border: 1px solid #568eff; color: #fff">
						<div class="row col-xs-7">
							<div>Data Type <br/> VOI</div>
							<div>Sources <br/> . </div>
							<div>Voucher Number <br/> REXI </div>
						</div>
						<div class="col-xs-6" style="background-color:#568eff; border: 1px solid #568eff; text-align: center; color: #fff">
							Classification Code
						</div>

					</div>
				</div>

				<br/>
				<!-- Payee's Details Row -->
				<div class="row">
					<div class="col-xs-8" style="border-left:1px solid #568eff;">
						<div class="col-xs-3">Payee</div><div class="col-xs-7"><u>Name of the payee</u></div>
					</div>
					<div class="col-xs-8" style="border-left:1px solid #568eff;">
						<div class="col-xs-3">Address</div><div class="col-xs-7"><u>Address of the payee</u></div>
					</div>
				</div>
				<br/>

				<!-- Service Description -->
				<!-- First row -->
				<div class="row">
					<div class="col-xs-1" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">Date</div>
					<div class="col-xs-8" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">Detailed Description of
						Service / Work</div>
					<div class="col-xs-1" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">Rate</div>
					<div class="col-xs-1" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">=N=</div>
					<div class="col-xs-1" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">K</div>
				</div>

				<!--Second row-->
				<div class="row">
					<div class="col-xs-1" style="border-left:1px solid #568eff;">1.</div>
					<div class="col-xs-8" style="border-left:1px solid #568eff;">Line 1 Item Description</div>
					<div class="col-xs-1" style="border-left:1px solid #568eff;">100</div>
					<div class="col-xs-1" style="border-left:1px solid #568eff;">1</div>
					<div class="col-xs-1" style="border-left:1px solid #568eff;border-right:1px solid #568eff;">100</div>
				</div>

				<!-- Third Table row -->
				<div class="row col-xs-12" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
					<div class="col-xs-8 col-xs-offset-1" >Checked and insert amount
						in words<br/>Passed for</div>
					<div class="col-xs-3">Total =N=</div>
				</div>

				<!-- Certificate Section -->
				<div class="row">
					<div class="col-xs-6" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
						Payable at __________________________<br/>
						Signature ___________________________<br/>
						Name in Block Letters _______________<br/>
						Station ____________ Date _____________<br/>
						Paying Officers_______________________<br/>
						Signature______________________________<br/>
						Autly, AIE No. etc.____________________
					</div>
					<div class="col-xs-6">
						<h5 style="text-transform: uppercase; text-align: center;">certificate</h5>
						<p>
							I certify the amount above is correct and incurred under the authority quoted; that the service have been daily performed;
							that the rate / price charged is according to regulations / contracts is fair and reasonable.
						</p>
						<p>
							That the amount of ............................  Naira ................................. Kobo may be paid under the Classification quoted.
						</p>
						<ul style="list-style-type: none; padding-left: 0">
							<li>Signature: ..............................................</li>
							<li>Place: ..................................................</li>
							<li>Date: ...................................................</li>
							<li>Designation: ............................................</li>
						</ul>
					</div>
				</div>

				<br/>
				<!-- Payment text -->
				<div class="row">
					Received from the Federal Government of nigeria the sum of _______________ Naira ____________
					Kobo in full settlement of the account.
				</div>
				<br/>
				<div class="row">
					<div class="text-right">_________________</div>
					<div class="text-right" style="margin-right: 3px;">Signature</div>
				</div>
				<br/>
				<div class="row">
					<div class="col-xs-4">=N=_______________K</div>
					<div class="col-xs-4">Date _____________</div>
					<div class="col-xs-4">Place ____________</div>
				</div>
			</div>
		</template>

		<template id="voucher_report_account">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="report.external_layout">
						<t t-call="payment_voucher.payment_voucher_template"/>
					</t>
				</t>
			</t>
		</template>

		<report id="report_voucher_supplier"
				string="Payment Voucher"
				model="account.payment"
				report_type="qweb-pdf"
				name="payment_voucher.voucher_report_account"
				/>
	</data>
</odoo>
