<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="payment_voucher_template">
			<div class="page">
				<style>
					table th, td{
						text-align: center;
					    border: 2px solid black !important;
					    border-collapse: collapse;
					}
					div[scope=col] {
					    -webkit-transform: rotate(-90deg);
					    padding-top:100px;
					    text-align:left;
					}
					table{
					    border-collapse: collapse;
					    border: .5px solid black;
					}
					table span{
					    margin-left: 2px;
					}
				</style>

				<div class="row mt16 mb16" style="text-align:center; text-transform: uppercase;">
					<h4><strong><u>Payment Voucher</u></strong></h4>
				</div>

				<!-- Deptal section -->
				<div class="row">
					<div class="col-xs-4">Deptal No. __________</div>
					<div class="col-xs-8">Checked and passed for payment at _________</div>
				</div>
				<br/>
				<br/>

				<div class="row">
					<div scope="col" class="col-xs-4" style="border: 1px solid #eeee">
						<span>For use in payment of Advances</span>
						<span>Certified the Advance of </span>
						<span>N _______________________</span>
						<span>has been entered on TF 174 (A) (B) (C)</span>
						<span>Deptal No. _______________</span>
						<span>Signature</span>
						<span>Name in block letters</span>
					</div>
					<div class="col-xs-6">
						<div class="row">
							<div>
								<div class="col-xs-8">
									<table>
									<tr>
										<th>Data Type</th>
										<th>Sources</th>
										<th>Voucher No.</th>
									</tr>
									<tr>
										<td>.</td>
										<td>.</td>
										<td>.</td>
									</tr>
									</table>
								</div>
							</div>
							<div>
								<div class="col-xs-10">
									<table>
										<tr>
											<th>Classification code</th>
										</tr>
										<tr>
											<td>Code here</td>
										</tr>
									</table>
								</div>
							</div>
							<div>
								<div class="col-xs-5">
									<table>
										<tr>
											<th class="col-xs-5">Date</th>
											<th class="col-xs-7">Amount</th>
										</tr>
										<tr>
											<td>22/04/19</td>
											<td>230000</td>
										</tr>
									</table>
								</div>
							</div>
							<div>
								<div class="col-xs-9">
									<table>
										<tr>
											<th>Classification code</th>
										</tr>
										<tr>
											<td>Classification code</td>
										</tr>
									</table>
								</div>
							</div>
						</div>
					</div>
					<div class="col-xs-2">
						<table>
							<tr>
								<th colspan="2">Station</th>
							</tr>
							<tr>
								<td>Head</td>
								<td>'head'</td>
							</tr>
							<tr>
								<td>S/Head</td>
								<td>'shead'</td>
							</tr>
						</table>
					</div>
				</div>
				<br/>
				<br/>
				<br/>
				<!-- Payee's Details Row -->
				<div class="row">
					<div>
						<div class="col-xs-3">Payee</div><div class="col-xs-7"><u t-field="o.partner_id"/></div>
					</div>
					<div>
						<div class="col-xs-3">Address</div><div class="col-xs-7"><u>Address of the payee</u></div>
					</div>
				</div>
				<br/>

				<div class="row">
					<table style="padding:0;margin-top:0;margin-bottom:0;">
						<thead>
							<tr>
								<th class="col-xs-1">Date</th>
								<th class="col-xs-8">Detailed description of Service / Work</th>
								<th class="col-xs-1">Rate</th>
								<th class="col-xs-1">=N=</th>
								<th class="col-xs-1">K</th>
							</tr>
						</thead>
						<tbody>
							<t t-set="nums" t-value="[1, 2, 3, 4, 5]"/>
							<t t-foreach="nums" t-as="num">
								<tr>
									<td class="col-xs-1">11/12/2019</td>
									<td class="col-xs-8">Item <span><t t-esc="num"/></span></td>
									<td class="col-xs-1">100/piece</td>
									<td class="col-xs-1">100</td>
									<td class="col-xs-1">00</td>
								</tr>
							</t>
						</tbody>
						<thead>
							<tr>
								<th style="margin-top:0;"></th>
								<th>Checked and Insert Amount in Words<br/>Passed for</th>
								<th>Total =N=</th>
								<th></th>
								<th></th>
							</tr>
						</thead>
					</table>
				</div>

				<div class="row">
					<table style="border:0px">
						<tr>
							<td colspan="5">
								Payable at __________________________<br/><br/>
								Signature ___________________________<br/><br/>
								Name in Block Letters <u style="text-transform: uppercase;" t-field="user.name"/><br/><br/>
								Station ____________ Date ___________<br/><br/>
								Paying Officers______________________<br/><br/>
								Signature____________________________<br/><br/>
								Autly, AIE No. etc.__________________
							</td>
							<td colspan="7">
								<h5 style="text-transform: uppercase; text-align: center;">certificate</h5>
								<div>
									I certify the amount above is correct and incurred under the authority quoted;
									that the service have been daily performed; that the rate / price charged is
									according to regulations / contracts is fair and reasonable.
								</div>
								<br/>
								<span>That the amount of ............. Naira ............. Kobo may be paid under the Classification quoted.</span>
								<h6 style="text-align:right">________________________</h6>
								<div class="row">
									<div class="col-xs-3 col-xs-offset-9">Signature</div>
								</div>
								<div>
									<div style="margin-left: 0px;" class="col-xs-6">Place <u>Date here</u></div>
									<div style="margin-left:0px;" class="col-xs-6">Date</div>
								</div>
								<div style="margin-left:0px;">
									Designation _______________
								</div>
							</td>
						</tr>
					</table>
				</div>

				<br/>
				<!-- Payment text -->
				<div class="row">
					Received from the Federal Government of nigeria the sum of _______________ Naira ____________
					Kobo in full settlement of the account.
				</div>
				<br/>
				<div class="row">
					<div class="text-right">_________________</div>
					<div class="text-right" style="margin-right: 3px;">Signature</div>
				</div>
				<br/>
				<div class="row">
					<div class="col-xs-4">=N=_______________K</div>
					<div class="col-xs-4">Date _____________</div>
					<div class="col-xs-4">Place ____________</div>
				</div>
			</div>
		</template>

		<template id="voucher_report_account">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="report.external_layout">
						<t t-call="payment_voucher.payment_voucher_template"/>
					</t>
				</t>
			</t>
		</template>

		<!-- Paper format for report -->
		<record id="paperformat_custom" model="report.paperformat">
            <field name="name">Payment A4</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">45</field>
            <field name="dpi">90</field>
        </record>

		<report id="report_voucher_supplier"
				string="Payment Voucher"
				model="account.voucher"
				report_type="qweb-pdf"
				name="payment_voucher.voucher_report_account"
				file="payment_voucher.voucher_report_account"
				paperformat="payment_voucher.paperformat_custom"
				/>
	</data>
</odoo>
