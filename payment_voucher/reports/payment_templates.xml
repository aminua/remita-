<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="payment_voucher_template">
			<div class="page">
				<style>
					table th, td{
						text-align: center;
					    border: 2px solid black !important;
					    border-collapse: collapse;
					}
					div[scope=col] {
					    -webkit-transform: rotate(-90deg);
					    padding-top:100px;
					    text-align:left;
					}
				</style>

				<div class="row mt16 mb16" style="text-align:center; text-transform: uppercase;">
					<h4><strong><u>Payment Voucher</u></strong></h4>
				</div>

				<!-- Deptal section -->
				<div class="row">
					<div class="col-xs-4">Deptal No. __________</div>
					<div class="col-xs-8">Checked and passed for payment at _________</div>
				</div>
				<br/>
				<br/>

				<div class="row">
					<div scope="col" class="col-xs-4" style="border: 1px solid #eeee">
						<span>For use in payment of Advances</span>
						<span>Certified the Advance of </span>
						<span>N _______________________</span>
						<span>has been entered on TF 174 (A) (B) (C)</span>
						<span>Deptal No. _______________</span>
						<span>Signature</span>
						<span>Name in block letters</span>
					</div>
					<div class="col-xs-6" style="background-color: #568eff; border: 1px solid #568eff; color: #fff">
						<div class="row">
							<div>
								<div class="col-xs-8">
									<table>
									<tr>
										<th>Data Type</th>
										<th>Sources</th>
										<th>Voucher No.</th>
									</tr>
									<tr>
										<td>.</td>
										<td>.</td>
										<td>.</td>
									</tr>
									</table>
								</div>
								<div class="col-xs-4">
									<table>
										<tr>
											<th colspan="2">Station</th>
										</tr>
										<tr>
											<td>Head</td>
											<td>'head'</td>
										</tr>
										<tr>
											<td>S/Head</td>
											<td>'shead'</td>
										</tr>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
				<br/>
				<br/>
				<br/>
				<!-- Payee's Details Row -->
				<div class="row">
					<div>
						<div class="col-xs-3">Payee</div><div class="col-xs-7"><u>Name of the payee</u></div>
					</div>
					<div>
						<div class="col-xs-3">Address</div><div class="col-xs-7"><u>Address of the payee</u></div>
					</div>
				</div>
				<br/>

				<div class="row">
					<table style="padding:0;margin-top:0;margin-bottom:0;">
						<thead>
							<tr>
								<th class="col-xs-1">Date</th>
								<th class="col-xs-8">Detailed description of Service / Work</th>
								<th class="col-xs-1">Rate</th>
								<th class="col-xs-1">=N=</th>
								<th class="col-xs-1">K</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td class="col-xs-1">11/12/2019</td>
								<td class="col-xs-8">Item 1</td>
								<td class="col-xs-1">100/piece</td>
								<td class="col-xs-1">100</td>
								<td class="col-xs-1">00</td>
							</tr>
						</tbody>
					</table>
				</div>

				<div class="row">
					<table style="border:0px">
						<tr>
							<td class="col-xs-5">
								<div class="w-100">Payable at __________________________</div>
								<div class="w-100">Signature ___________________________</div>
								<div class="w-100">Name in Block Letters _______________</div>
								<div class="w-100">Station ____________ Date ___________</div>
								<div class="w-100">Paying Officers______________________</div>
								<div class="w-100">Signature____________________________</div>
								<div class="w-100">Autly, AIE No. etc.__________________</div>
							</td>
							<td class="col-xs-7" id="notes">
								<div><h5 style="text-transform: uppercase; text-align: center;">certificate</h5></div>
								<div>
									I certify the amount above is correct and incurred under the authority quoted;
									that the service have been daily performed; that the rate / price charged is
									according to regulations / contracts is fair and reasonable.
								</div>
								<div>
									That the amount of ............. Naira ............. Kobo may be paid under the Classification quoted.
								</div>
								<div class="row">
									<div style="text-align:right">________________________</div>
								</div>
								<div class="row">
									<div class="col-xs-3 col-xs-offset-9">Signature</div>
								</div>
								<div class="row">
									<div class="col-xs-6">
										Place
									</div>
									<div class="col-xs-6">
										Date
									</div>
								</div>
								<div class="row">
									<div class="col-xs-8">Designation _______________</div>
								</div>
							</td>
						</tr>
					</table>
				</div>

				<br/>
				<!-- Payment text -->
				<div class="row">
					Received from the Federal Government of nigeria the sum of _______________ Naira ____________
					Kobo in full settlement of the account.
				</div>
				<br/>
				<div class="row">
					<div class="text-right">_________________</div>
					<div class="text-right" style="margin-right: 3px;">Signature</div>
				</div>
				<br/>
				<div class="row">
					<div class="col-xs-4">=N=_______________K</div>
					<div class="col-xs-4">Date _____________</div>
					<div class="col-xs-4">Place ____________</div>
				</div>
			</div>
		</template>

		<template id="voucher_report_account">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="report.external_layout">
						<t t-call="payment_voucher.payment_voucher_template"/>
					</t>
				</t>
			</t>
		</template>

		<report id="report_voucher_supplier"
				string="Payment Voucher"
				model="account.payment"
				report_type="qweb-pdf"
				name="payment_voucher.voucher_report_account"
				/>
	</data>
</odoo>
